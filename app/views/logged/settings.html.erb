<!DOCTYPE html>
<html>
<body>
    Idioma:
    <select>
      <option value="PT">PT</option>
      <option value="ES">ES</option>
      <option value="EN">EN</option>
    </select><br><br>
    Moeda :
    <select>
      <option value="€">€</option>
      <option value="$">$</option>
      <option value="£">£</option>
    </select><br><br>
    <%=  form_tag url: { action: "create" }, html: { class: "listform"} do   %>
    <%= label :type, :Eletricidade%>
    <%= number_field :limite, :value1, in: 1.0..99999.0, placeholder: "Limite desejado" %>
    <br> <br>
    <%= label :type, :Água%>
    <%= number_field :limite, :value2, in: 1.0..99999.0, placeholder: "Limite desejado" %>
    <br> <br>
    <%= label :type , :Gás %>
    <%= number_field :limite, :value3, in: 1.0..99999.0, placeholder: "Limite desejado" %>
    <br> <br>
    <%= submit_tag "Guardar Limites" %>
    <% end %>

</body>
</html>
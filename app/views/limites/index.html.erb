<p id="notice"><%= notice %></p>

<h1>Limites</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Meter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @limites.each do |limite| %>
      <tr>
        <td><%= limite.value %></td>
        <td><%= limite.meter %></td>
        <td><%= link_to 'Show', limite %></td>
        <td><%= link_to 'Edit', edit_limite_path(limite) %></td>
        <td><%= link_to 'Destroy', limite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

